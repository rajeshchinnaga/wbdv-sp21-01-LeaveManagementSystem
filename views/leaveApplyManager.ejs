<% include ./partial/header %> <% include ./partial/managerfunction %>
<div class="col-md-6"></div>
<div

        style="    flex: 0 0 50%;
max-width: 50%;
margin-left: 431px;
margin-top: -181px;  text-align: -webkit-center;"
>
    <div class="col-md-8">
    <h1>Apply for leave here <%=manager.name%></h1>
    <form action="/manager/<%=manager._id%>/apply" method="POST">
        <div class="form-group">
            <input
                    type="text"
                    placeholder="subject"
                    name="leave[subject]"
                    class="form-control"
            />
        </div>
        <div class="form-group">
            <label for="from">From:</label>
            <input
                    type="date"
                    data-date-inline-picker="true"
                    id="from"
                    name="leave[from]"
            />
        </div>
        <div class="form-group">
            <label for="to">To:</label>
            <input
                    type="date"
                    data-date-inline-picker="true"
                    id="to"
                    name="leave[to]"
            />
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-block btn-default">Submit</button>
        </div>
    </form>
    </div>

    <% include ./partial/footer %>
</div>
