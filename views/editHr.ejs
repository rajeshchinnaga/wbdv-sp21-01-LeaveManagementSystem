<% include ./partial/header %>
<div class="container"
style=" position: relative;
border-radius: 5px;
background-color: #f2f2f2;
padding: 20px 0 30px 0;
width: 40%;

">
  
      <form action="/hr/<%=hr._id%>?_method=PUT" method="POST" style="margin-top: 20px;">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center;">Edit Profile<%= hr.name%></h1>
            <div class="form-group form-inline">
              <label
                for="name"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >Name</label
              >
              <input
                class="form-control"
                type="text"
                id="name"
                value="<%= hr.name%>"
                name="hr[name]"
              />
            </div>
            <div class="form-group form-inline">
              <label
                for="username"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >Username</label
              >
              <input
                class="form-control"
                type="text"
                id="username"
                value="<%= hr.username%>"
                name="hr[username]"
              />
            </div>
            <div class="form-group form-inline">
              <label
                for="designation"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >Designation</label
              >
              <input
                class="form-control"
                type="text"
                id="designation"
                value="<%= hr.designation%>"
                name="hr[designation]"
              />
            </div>

            <div class="form-group form-inline">
              <label
                for="url"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >Image-url</label
              >
              <input
                class="form-control"
                type="text"
                id="url"
                value="<%= hr.image%>"
                name="hr[image]"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
          </div>
        </div>
      </form>
  <a href="/hr/<%= hr.id%>">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
